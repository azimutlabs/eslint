{
  "name": "@azimutlabs/eslint",
  "private": true,
  "license": "MIT",
  "directories": {
    "test": "tests"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "yarn eslint --max-warnings 0 packages tests",
    "test": "yarn jest"
  },
  "eslintConfig": {
